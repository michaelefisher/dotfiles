set nocompatible              " be iMproved, required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
" alternatively, pass a path where Vundle should install plugins
"call vundle#begin('~/some/path/here')

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'

" The following are examples of different formats supported.
" Keep Plugin commands between vundle#begin/end.

" The sparkup vim script is in a subdirectory of this repo called vim.
" Pass the path to set the runtimepath properly.
Plugin 'rstacruz/sparkup', {'rtp': 'vim/'}
" Install L9 and avoid a Naming conflict if you've already installed a
" different version somewhere else.
" Plugin 'ascenator/L9', {'name': 'newL9'}

Plugin 'scrooloose/nerdtree'
Plugin 'itchyny/lightline.vim'
Plugin 'terryma/vim-multiple-cursors'
Plugin 'airblade/vim-gitgutter'
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'
Plugin 'scrooloose/nerdcommenter'
Plugin 'chrisbra/csv.vim'
Plugin 'vim-syntastic/syntastic'
Plugin 'vim-scripts/indentpython.vim'
Plugin 'Valloric/YouCompleteMe'
Plugin 'nvie/vim-flake8'
Plugin 'tmhedberg/SimpylFold'
Plugin 'Quramy/tsuquyomi'
Plugin 'wannesm/rmvim.vim'
Plugin 'metakirby5/codi.vim'
Plugin 'vimwiki/vimwiki'

" Frontend
" Plugin 'eslint/eslint'
" Plugin 'flowtype/vim-flow'

" All of your Plugins must be added before the following line
call vundle#end()            " required
filetype plugin indent on    " required
" To ignore plugin indent changes, instead use:
"filetype plugin on
"
" Brief help
" :PluginList       - lists configured plugins
" :PluginInstall    - installs plugins; append `!` to update or just :PluginUpdate
" :PluginSearch foo - searches for foo; append `!` to refresh local cache
" :PluginClean      - confirms removal of unused plugins; append `!` to auto-approve removal
"
" see :h vundle for more details or wiki for FAQ
" Put your non-Plugin stuff after this line

" Clipboard stuff
noremap <Leader>y "*y
noremap <Leader>p "*p
noremap <Leader>Y "+y
noremap <Leader>P "+p
set clipboard=unnamedplus

syntax on
filetype plugin indent on
set mouse=a
set ttymouse=xterm2
" set tabs to 2
set tabstop=4
set nu

autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * if argc() == 0 && !exists("s:std_in") | NERDTree | endif
set t_Co=256

let g:gitgutter_max_signs = 500  " default value

" install syntastic
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1
let g:airline_status_y = '%{bufnr("%")}'

" install gitgutter
let g:gitgutter_sign_added = 'xx'
let g:gitgutter_sign_modified = 'yy'
let g:gitgutter_sign_removed = 'zz'
let g:gitgutter_sign_removed_first_line = '^^'
let g:gitgutter_sign_modified_removed = 'ww'

" tmp files
set directory=/tmp
let NERDTreeShowHidden=1

autocmd BufWritePre * %s/\s\+$//e

map  <C-t> :bnext<CR>
map  <C-p> :bprev<CR>
map  <C-l> :ls<CR>

let g:airline_powerline_fonts = 1


let g:multi_cursor_use_default_mapping=1

" Default mapping
let g:multi_cursor_start_word_key      = '<C-n>'
let g:multi_cursor_select_all_word_key = '<A-n>'
let g:multi_cursor_start_key           = 'g<C-n>'
let g:multi_cursor_select_all_key      = 'g<A-n>'
let g:multi_cursor_next_key            = '<C-n>'
let g:multi_cursor_prev_key            = '<C-p>'
let g:multi_cursor_skip_key            = '<C-x>'
let g:multi_cursor_quit_key            = '<Esc>'

" gvim/macvim
set gfn=set gfn=Literation\ Mono\ Powerline:h14
colo desert
set linespace=2

" Python indentation
au BufNewFile,BufRead *.py
    \ set tabstop=4 |
    \ set softtabstop=4 |
    \ set shiftwidth=4 |
    \ set textwidth=79 |
    \ set expandtab |
    \ set autoindent |
    \ set fileformat=unix |
    \ set filetype=python |

" shell scripts
au BufNewFile,BufRead *.sh
    \ set tabstop=2 |
    \ set softtabstop=2 |
    \ set shiftwidth=2 |
    \ set expandtab |
    \ set foldmethod=syntax |
    \ set filetype=sh |

" html
au BufNewFile,BufRead *.{htm,html}
    \ set filetype=html |
    \ set expandtab |
    \ set foldmethod=syntax |
    \ set filetype=html |
    \ set tabstop=2 |
    \ set softtabstop=2 |
    \ set shiftwidth=2 |

" css
au BufNewFile,BufRead *.{css,scss}
    \ set filetype=css |
    \ set expandtab |
    \ set foldmethod=syntax |
    \ set filetype=css |
    \ set tabstop=2 |
    \ set softtabstop=2 |
    \ set shiftwidth=2 |

" js
au BufNewFile,BufRead *.{js,jsx,ts}
    \ set filetype=javascript |
    \ set expandtab |
    \ set foldmethod=syntax |
    \ set tabstop=2 |
    \ set softtabstop=2 |
    \ set shiftwidth=2 |

" add yaml stuffs
au BufNewFile,BufReadPost *.{yaml,yml}
   \ set filetype=yaml |
   \ set foldmethod=indent |
   \ set tabstop=2 |
   \ set softtabstop=2 |
   \ set shiftwidth=2 |
   \ set expandtab |

" absolute width of netrw window
let g:netrw_winsize = -38

" do not display info on the top of window
let g:netrw_banner = 0

" tree-view
let g:netrw_liststyle = 3

" sort is affecting only: directories on the top, files below
let g:netrw_sort_sequence = '[\/]$,*'

" use the previous window to open file
let g:netrw_browse_split = 2

let g:ycm_autoclose_preview_window_after_completion=1
map <leader>g  :YcmCompleter GoToDefinitionElseDeclaration<CR>

" Auto-apply chezmoi
autocmd BufWritePost ~/.local/share/chezmoi/* ! chezmoi apply --source-path "%"
